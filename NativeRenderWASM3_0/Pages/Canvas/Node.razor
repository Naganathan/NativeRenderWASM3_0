@namespace NativeRenderWASM3_0

@inherits ComponentBase;

<g id="node_element" xmlns="http://www.w3.org/2000/svg">
    <rect id="node" x="@X" y="@Y" width="@Width" height="@Height" fill="blue" stroke-width="5"></rect>

    <CascadingValue Value="@this">
        @ChildContent
        @if (Annotations!=null && Annotations.Count > 0)
        {
            foreach (Annotation annotation in Annotations)
            {
                <Annotation Text="@annotation.Text" X="@annotation.X" Y="@annotation.Y"></Annotation>
            }
        }
    </CascadingValue>
</g>
        
